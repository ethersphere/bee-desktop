{
  "name": "bee-desktop",
  "productName": "bee-desktop",
  "author": {
    "name": "Swarm",
    "email": "info@ethswarm.org"
  },
  "version": "0.4.0",
  "description": "Desktop client for running and managing bee",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run clean && tsc && electron-forge start",
    "package": "npm run clean && tsc && electron-forge package",
    "make": "npm run clean && tsc && electron-forge make",
    "publish": "npm run clean && tsc && electron-forge publish",
    "clean": "rimraf dist out",
    "depcheck": "depcheck .",
    "lint": "eslint --fix \"src/**/*.ts\" && prettier --write \"src/**/*.ts\"",
    "lint:check": "eslint \"src/**/*.ts\" && prettier --check \"src/**/*.ts\"",
    "check:types": "tsc --project tsconfig.test.json",
    "test:unit": "jest --verbose -config=jest.config.ts "
  },
  "keywords": [
    "bee",
    "swarm",
    "decentralised",
    "storage",
    "ethereum",
    "typescript",
    "p2p",
    "electron",
    "desktop"
  ],
  "license": "BSD-3-Clause",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "bee_desktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ethersphere",
              "name": "bee-desktop"
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "@kayahr/jest-electron-runner": "^4.4.1",
    "@types/cross-zip": "^4.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-static": "^4.0.2",
    "@types/node-fetch": "^2.6.1",
    "@types/request-stats": "^3.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "depcheck": "^1.4.3",
    "electron": "18.0.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "cross-zip": "^4.0.0",
    "env-paths": "2",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.6.6",
    "fs-extra": "^10.1.0",
    "js-yaml": "^4.1.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-static": "^5.0.0",
    "node-fetch": "^2.6.7",
    "request-stats": "^3.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  }
}
